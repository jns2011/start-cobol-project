{
    "cobol-lsp.cpy-manager.copybook-file-encoding": "ISO-8859-1",
    "cobol-lsp.dialects": ["gnucobol"],  // Assume these work
    "cobol-lsp.linter.dialect": false,    
    "files.exclude": {
        "*.i":true,
        "*.c":true,
        "*.c.*": true,
        "*.exe": true,
    },
    "code-runner.executorMap": {
    "cobol": "cd $workspaceRoot &&  cobc -x -I ./includes $fileName  && ./$fileNameWithoutExt.exe"
    },
    "explorer.excludeGitIgnore": true,
    "code-runner.runInTerminal": true,
    "code-runner.preserveFocus": false,
    "code-runner.ignoreSelection": true
}